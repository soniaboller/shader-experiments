<script id="vertexShader" type="x-shader/x-vertex">
    varying vec2;
    void main()
    {
        vec4 mvPosition = modelViewMatrix * vec4( position, 1.0 );
        gl_Position = projectionMatrix * mvPosition;
    }

</script>

<script id="fragmentShader" type="x-shader/x-fragment">

    uniform vec2 resolution;
    uniform float time;

    void main()	{
      vec2 position = -5.0 + 5.0 * gl_FragCoord.xy / resolution.xy;
float red = sin( position.x * sin( time / 20.0 ) * 30.0 ) + cos( position.y * cos( time / 40.0 ) * 30.0 );
float green = sin( position.x * cos( time / 30.0 ) * 30.0 ) + cos( position.y * sin( time / 30.0 ) * 30.0 );
float blue = sin( position.x * sin( time / 40.0 ) * 30.0 ) + cos( position.y * cos( time / 20.0 ) * 30.0 );
gl_FragColor = vec4( red, green, blue, 1.0 );
    }

</script>

